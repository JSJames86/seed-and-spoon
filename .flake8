[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    */migrations/*,
    */static/*,
    */media/*,
    venv,
    .venv,
    */settings.py,
    manage.py
ignore =
    # E203: whitespace before ':'  (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501
per-file-ignores =
    # F401: imported but unused (common in __init__.py files)
    __init__.py:F401
max-complexity = 10
