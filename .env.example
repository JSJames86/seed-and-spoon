# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Public URLs
# Set to your production domain in production, localhost:3000 in development
PUBLIC_BASE_URL=http://localhost:3000

# Donation Flow URLs
# These use Stripe's {CHECKOUT_SESSION_ID} placeholder
DONATE_SUCCESS_URL=${PUBLIC_BASE_URL}/thank-you?session_id={CHECKOUT_SESSION_ID}
DONATE_CANCEL_URL=${PUBLIC_BASE_URL}/donate

# Optional: Site Environment (for metadata tracking)
SITE_ENV=development

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Optional: Logging Level
LOG_LEVEL=info

# =======================================
# Analytics Configuration (GDPR Compliant)
# =======================================
# These analytics only load after user consent

# Plausible Analytics (Privacy-first, Required)
# Default domain: seedandspoon.org
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=seedandspoon.org

# Meta Pixel (Facebook) - Required
# Get from: https://business.facebook.com/events_manager
NEXT_PUBLIC_META_PIXEL_ID=your_meta_pixel_id_here

# Google Analytics 4 (Optional)
# Get from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX

# TikTok Pixel (Optional)
# Get from: https://ads.tiktok.com/
NEXT_PUBLIC_TIKTOK_PIXEL_ID=your_tiktok_pixel_id_here

# Snapchat Pixel (Optional)
# Get from: https://ads.snapchat.com/
NEXT_PUBLIC_SNAP_PIXEL_ID=your_snap_pixel_id_here

# Pinterest Tag (Optional)
# Get from: https://ads.pinterest.com/
NEXT_PUBLIC_PINTEREST_TAG_ID=your_pinterest_tag_id_here
