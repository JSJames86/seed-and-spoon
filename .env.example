# MongoDB Configuration
# MongoDB connection string (get from MongoDB Atlas or local instance)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB=seedandspoon

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Public URLs
# Set to your production domain in production, localhost:3000 in development
PUBLIC_BASE_URL=http://localhost:3000

# Donation Flow URLs
# These use Stripe's {CHECKOUT_SESSION_ID} placeholder
DONATE_SUCCESS_URL=${PUBLIC_BASE_URL}/thank-you?session_id={CHECKOUT_SESSION_ID}
DONATE_CANCEL_URL=${PUBLIC_BASE_URL}/donate

# Optional: Site Environment (for metadata tracking)
SITE_ENV=development

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Optional: Logging Level
LOG_LEVEL=info
